{
	"name": "chess-openings",
	"version": "0.1.1",
	"description": "Read chess opening books in Polyglot (`.bin`) format and ECO data.",
	"main": "index.js",
	"scripts": {
		"build": "rimraf ./dist && tsc --project tsconfig.build.json && chmod +x dist/index.js",
		"prepublishOnly": "bun run build",
		"check:clean": "./check-clean",
		"format": "prettier --write 'src/**/*.ts' *.mjs *.json",
		"start": "tsx src/index.ts",
		"watch": "tsc --watch",
		"clean": "rimraf ./dist",
		"lint": "eslint './src/**/*.ts'",
		"lint:fix": "eslint --fix './src/**/*.ts'",
		"lint:fix-dry-run": "eslint --fix './src/**/*.ts'",
		"lint:staged": "lint-staged",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"prepare": "husky"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": "\\.spec\\.ts$",
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				{
					"tsconfig": {
						"isolatedModules": true
					}
				}
			]
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"lint-staged": {
		"*.{ts,json,md}": [
			"prettier --write"
		],
		"src/**/*.ts": [
			"eslint"
		]
	},
	"keywords": [],
	"author": "",
	"license": "WTFPL",
	"packageManager": "pnpm@10.18.3",
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@tsconfig/recommended": "^1.0.13",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.1",
		"eslint": "^9.39.1",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1"
	},
	"dependencies": {
		"int64-buffer": "^1.1.0"
	}
}
